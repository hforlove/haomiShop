.detail_swiper {
  height: 750rpx;
}
.detail_swiper image {
  width: 750rpx;
  height: 750rpx;
}
.detail_info {
  background: #fff;
  padding: 20rpx;
}
.detail_info .title {
  font-size: 32rpx;
  font-weight: bold;
}
.detail_info .info {
  color: #666;
  font-size: 24rpx;
  padding: 10rpx 0;
}
.detail_info .price {
  color: #e93b3d;
  font-size: 32rpx;
}
.detail_cont {
  padding: 20rpx;
  background: #fff;
  margin-top: 20rpx;
  padding-bottom: 120rpx;
}
.detail_action {
  background: #fff;
  z-index: 999;
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 0 8rpx;
}
.detail_action .iconfont {
  font-size: 36rpx;
}
.detail_action .l {
  width: 96rpx;
  text-align: center;
}
.detail_action .l text {
  margin-top: -12rpx;
  display: block;
  font-size: 28rpx;
}
.detail_action .r {
  flex: 1;
  padding: 8rpx 0;
}
.detail_action .r button {
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 32rpx;
  font-weight: normal;
}
.detail_action .r .join {
  background: linear-gradient(to right, #ffd01e, #ff8917);
  border-radius: 42rpx 0 0 42rpx;
}
.detail_action .r .buy {
  background: linear-gradient(to right, #ff6034, #ee0a24);
  border-radius: 0 42rpx 42rpx 0;
}
