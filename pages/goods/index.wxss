.goods_search {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
}
.goods_list {
  padding-top: 92rpx;
  background: #fff;
}
.goods_list .goods {
  display: flex;
  border-bottom: 2rpx solid #ccc;
  padding: 20rpx;
}
.goods_list .img {
  width: 176rpx;
  height: 176rpx;
}
.goods_list .img image {
  width: 100%;
  height: 100%;
}
.goods_list .cont {
  flex: 1;
  font-size: 24rpx;
  overflow: hidden;
  padding-left: 32rpx;
}
.goods_list .title {
  font-size: 28rpx;
}
.goods_list .title,
.goods_list .info {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 12rpx;
  height: 40rpx;
}
.goods_list .price {
  color: #e93b3d;
  font-size: 32rpx;
  margin-top: 28rpx;
}
